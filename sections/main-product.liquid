        <h1 class="text-3xl font-extrabold tracking-tight text-gray-900">{{ product.title }}</h1>

        <div class="mt-3">
          <h2 class="sr-only">Product information</h2>
          <p class="text-3xl text-gray-900">{{ product.price | money }}</p>
        </div>

        <!-- Reviews -->
